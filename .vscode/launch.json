{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Workflow",
            "type": "debugpy",
            "request": "launch",
            "program": "src/core/workflow.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--question",
                "What is a significant durian pest found in Southeast Asia, a major durian-producing region, and what are some of its key characteristics and prevalence in this area?",
                "--n-retrieved-documents",
                "10",
                "--n-web-searches",
                "3",
                "--edge-retrieval",
                "--node-retrieval"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}