    "version": "0.2.0",
    "configurations": [
        {
            "name": "Workflow",
            "type": "debugpy",
            "request": "launch",
            "program": "src/core/workflow.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--question",
                "What causes durian leaf curl?",
                "--n-retrieved-documents",
                "3",
                "--n-web-searches",
                "3",
                "--edge-retrieval"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}